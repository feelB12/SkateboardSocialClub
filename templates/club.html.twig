{% extends "base.html.twig" %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/bookdetails.css') }}">
{% endblock stylesheets %}

{% block main %}
    <article class="book-detail">

        <div class="card-text">
            <h2>{{ book.title }}</h2>
            {% if book.author %}
                <h3>{{ book.author.firstName }} {{ book.author.lastName }}</h3>
            {% endif %}
            <div class="date"></div>
            <em>Date de publication : {{ book.publishedAt | date('d/m/y') }}</em>
        </div>

        </div>
    </article>
{% endblock main %}